<SingleOptionDatePicker>:
    add_new:add_new

    id:sodp
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    cols:1
    spacing:[20,0]

    MDFlatButton:
        id: add_new
        text: "Select Date"
        width: 250
        font_size: 16
        size_hint: 2, 2
        normal_color: app.theme_cls.primary_dark
        on_release:sodp.show_date_picker()
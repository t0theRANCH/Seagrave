<DropdownMenu>
    caller: text_field
    height: text_field.height
    size_hint_y: None
    MDTextField:
        id:text_field
        hint_text: root.hint_text
        text: root.text
        input_type: 'text'
        mode: "rectangle"
        multiline: False
        keyboard_suggestions: True
        on_touch_down: root.on_touch_down()
    MDIconButton:
        icon: "chevron-down"
        id: open_menu
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0

<EditableDropdownMenu>
    arrow: open_menu
    height: text_field.height
    size_hint_y: None
    MDTextField:
        id:text_field
        hint_text: root.hint_text
        text: root.text
        input_type: 'text'
        mode: "rectangle"
        multiline: False
        keyboard_suggestions: True
        on_text: root.text = self.text
    MDIconButton:
        icon: "chevron-down"
        id: open_menu
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        on_release: root.menu.open()
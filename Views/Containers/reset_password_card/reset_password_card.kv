<ResetPasswordCard>:
    size_hint: 1, 1
    orientation: "vertical"
    md_bg_color: 0,0,0,1

    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 1, 0.5
        pos_hint: {'center_x': 0.5}
        MDLabel:
            id: reset_password
            text: "Reset Password"
            color: app.theme_cls.accent_color
            font_size: dp(32)
            pos_hint: {'center_x': 0.55}
            font_name: 'assets/BankGothicBold.ttf'

        MDLabel:
            id: instructions
            text: 'Enter the email associated with your account and we\'ll send you a verification code to reset your password'
            color: app.theme_cls.accent_color
            font_size: dp(18)
            size_hint_x: 0.9
            pos_hint: {'center_x': 0.5}
            font_name: 'assets/BankGothicBold.ttf'

    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 1, 0.3

        MDLabel:
            text: 'E-mail'
            font_name: 'assets/BankGothicBold.ttf'
            font_size: dp(16)
            pos_hint: {'right': 1.15}
        MDTextField:
            id: email
            hint_text: "@seagravebuildings.com"
            helper_text: ''
            input_type: 'text'
            keyboard_suggestions: False
            helper_text_mode: 'on_error'
            icon_right: "account"
            multiline: False
            size_hint_x: 0.7
            font_size: dp(16)
            pos_hint: {"center_x": 0.5}

        MDFillRoundFlatButton:
            text: "Send Code"
            font_size: dp(24)
            size_hint_x: 0.7
            pos_hint: {'center_x': 0.5}
            on_release: root.send_code()
        MDBoxLayout:
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.5}

            MDLabel:
                text: 'Already received it?'
                font_size: dp(12)
                pos_hint: {'center_x': 0.4}
            MDTextButton:
                text: "Enter Confirmation Code"
                font_size: dp(12)
                pos_hint: {'center_y': 0.5}
                on_release: root.enter_confirmation_code()

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.2
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            pos_hint: {'right': 0.9, 'top': 0.5}

            MDFloatingActionButton:
                icon: "arrow-left-circle"
                on_release: root.back()
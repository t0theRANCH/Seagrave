<CreateNewPasswordCard>:
    password:password
    confirm_password:confirm_password
    adaptive_height: True
    orientation: "vertical"
    md_bg_color: 0,0,0,1

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.4
        pos_hint: {'center_x': 0.5}
        MDLabel:
            id: create_new_password
            text: "Create New Password"
            color: app.theme_cls.accent_color
            font_size: dp(32)
            pos_hint: {'center_x': 0.65}
            font_name: 'assets/BankGothicBold.ttf'
        MDLabel:
            id: instructions
            text: 'Enter a new password with at least 8 characters, a number, symbol, and capital letter'
            color: app.theme_cls.accent_color
            font_size: dp(18)
            size_hint_x: 0.9
            pos_hint: {'center_x': 0.5}
            font_name: 'assets/BankGothicBold.ttf'
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.4

        MDLabel:
            text: 'New Password'
            font_name: 'assets/BankGothicBold.ttf'
            font_size: dp(16)
            pos_hint: {'right': 1.15}
        MDTextField:
            id: password
            hint_text: "New Password"
            helper_text: ''
            helper_text_mode: 'on_error'
            icon_right: "eye-off"
            multiline: False
            size_hint_x: 0.7
            font_size: dp(16)
            pos_hint: {"center_x": 0.5}
            password: True
        MDLabel:
            text: 'Confirm Password'
            font_name: 'assets/BankGothicBold.ttf'
            font_size: dp(16)
            pos_hint: {'right': 1.15}
        MDTextField:
            id: confirm_password
            hint_text: "Confirm Password"
            helper_text: ''
            helper_text_mode: 'on_error'
            icon_right: "eye-off"
            multiline: False
            size_hint_x: 0.7
            font_size: dp(16)
            pos_hint: {"center_x": 0.5}
            password: True
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.2
        pos_hint: {'center_x': 0.5}

        MDFillRoundFlatButton:
            text: "Reset Password"
            font_size: dp(24)
            size_hint_x: 0.7
            pos_hint: {'center_x': 0.5}
            on_release: root.reset_password()
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            pos_hint: {'right': 0.9, 'top': 0.5}

            MDFloatingActionButton:
                icon: "arrow-left-circle"
                on_release: root.back()
<LoginCard>:
    adaptive_height: True
    orientation: "vertical"
    md_bg_color: 0,0,0,1

    MDLabel:
        id: log_in
        text: "Log In"
        color: app.theme_cls.accent_color
        font_size: dp(32)
        size_hint: 1, 0.2
        pos_hint: {'center_x': 0.65}
        font_name: 'assets/BankGothicBold.ttf'
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.4
        MDLabel:
            text: 'E-mail'
            font_name: 'assets/BankGothicBold.ttf'
            font_size: dp(16)
            pos_hint: {'right': 1.15}
        MDTextField:
            id: email
            hint_text: "@seagravebuildings.com"
            helper_text: ''
            input_type: 'mail'
            keyboard_suggestions: True
            helper_text_mode: 'on_error'
            icon_right: "account"
            multiline: False
            size_hint_x: 0.7
            font_size: dp(16)
            pos_hint: {"center_x": 0.5}
        MDLabel:
            text: 'Password'
            font_name: 'assets/BankGothicBold.ttf'
            font_size: dp(16)
            pos_hint: {'right': 1.15}
        MDTextField:
            id: password
            hint_text: "Password"
            helper_text: ''
            helper_text_mode: 'on_error'
            icon_right: "eye-off"
            multiline: False
            size_hint_x: 0.7
            font_size: dp(16)
            pos_hint: {"center_x": 0.5}
            password: True
    MDBoxLayout:
        size_hint: 1, 0.4
        orientation: 'vertical'
        spacing: 25
        MDTextButton:
            text: "Forgot Password?"
            font_size: dp(16)
            pos_hint: {"right": 0.85}
            on_release: root.forgot_password()

        MDFillRoundFlatButton:
            text: "Log In"
            font_size: dp(24)
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.5}
            on_release: root.log_in()

        MDBoxLayout:
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.5}

            MDLabel:
                text: 'Don\'t have an account?'
                font_size: dp(12)
                pos_hint: {'center_x': 0.4}
            MDTextButton:
                text: "Sign Up"
                font_size: dp(12)
                pos_hint: {'center_x': 0.6, 'center_y': 0.5}
                on_release: root.register()
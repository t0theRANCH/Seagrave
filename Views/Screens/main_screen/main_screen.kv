<MainScreen>:
    main_drag:main_drag
    main_feed:main_feed

    id: main_drag
    name: 'main_screen'
    MDFloatLayout:
        size_hint: 1,1
        MDTopAppBar:
            pos_hint: {"top": 1}
            id:toolbar
            title: ""
            left_action_items: [["menu", lambda x: main_drag.controller.open_close()]]
        ScrollView:
            pos_hint: {"top": 0.9}
            MDList:
                id: main_feed
                spacing: "18dp"
        MDFloatingActionButtonSpeedDial:
            id: speed_dial
            label_text_color: 1,1,1,1
            label_bg_color: app.theme_cls.primary_color
            label_radius: 10,10,10,10
            pos_hint: {"x": .9, "y": .1}
<PictureView>:
    name: "picture_view"
    id: picture_view
    heroes_to: [hero_to]

    MDBoxLayout:
        id: layout
        orientation: 'vertical'
        ScatterLayout:
            id: scatter
            scale_min: .3
            scale_max: 10
            width: root.width
            do_rotation: False
            auto_bring_to_front: False
            MDHeroTo:
                id: hero_to
                size_hint: 1, 1
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            MDFloatingActionButtonSpeedDial:
                id: speed_dial
                label_text_color: 1,1,1,1
                label_bg_color: app.theme_cls.primary_color
                label_radius: 10,10,10,10
                pos_hint: {'right': .9, 'bottom': .9}
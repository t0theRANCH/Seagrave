<EquipmentServicePopupContent>:
    id:pop
    size_hint_y: None
    orientation:'vertical'
    height: "400dp"
    EditableLabel:
        id: unit_num_field
        hint_text: "Unit #"
    MDBoxLayout:
        EditableLabel:
            id: last_inspection_field
            hint_text: "Last Inspection"
        EditableLabel:
            id: last_service_field
            hint_text: "Last Service"
    EditableLabel:
        id: mileage_field
        hint_text: "Mileage (hours)"
    MDBoxLayout:
        MDLabel:
            id: mileage_until_inspection_field
            text: root.mileage_until_inspection
        MDLabel:
            id: mileage_until_service_field
            text: root.mileage_until_service
    DropdownMenu:
        id: dropdown


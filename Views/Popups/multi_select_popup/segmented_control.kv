<SegmentedControlRow>:
    orientation: 'horizontal'
    MDSegmentedControl:
        id: segmented_control
        on_active: root.on_active(*args)
        MDSegmentedControlItem:
            text: 'Pass'
            color: 'green'
            font_size: "12dp"
        MDSegmentedControlItem:
            text: 'Needs Maintenance'
            color: 'yellow'
            font_size: "12dp"
        MDSegmentedControlItem:
            text: 'Fail'
            color: 'red'
            font_size: "12dp"
